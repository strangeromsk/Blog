<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- JDBC Database connection settings -->
        <property name="connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="connection.url">jdbc:mysql://localhost:3306/tasklib?allowPublicKeyRetrieval=true</property>
        <property name="connection.username">root</property>
        <property name="connection.password">dfgIU987fmS</property>
        <!-- JDBC connection pool settings ... using built-in test pool -->
        <property name="connection.pool_size">10</property>
        <!-- Select our SQL dialect -->
        <property name="dialect">org.hibernate.dialect.MySQL5Dialect</property>
        <!-- Echo the SQL to stdout -->
        <property name="show_sql">true</property>
        <!-- Set the current session context -->
        <property name="current_session_context_class">thread</property>
        <!-- Drop and re-create the database schema on startup -->
        <property name="hbm2ddl.auto">update</property>

        <mapping class="main.model.GlobalSetting"></mapping>
        <mapping class="main.model.PostComment"></mapping>
        <mapping class="main.model.PostVote"></mapping>
        <mapping class="main.model.Tag"></mapping>
        <mapping class="main.model.TagToPost"></mapping>
        <mapping class="main.model.Post"></mapping>
        <mapping class="main.model.User"></mapping>

        <mapping class="PostsTableTest"></mapping>
    </session-factory>
</hibernate-configuration>